<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid flex-column align-items-start justify-content-between h-100">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <ul class="nav flex-column">
      <li class="nav-item active">
        <%= link_to  "/", class: "nav-link fs-1" do %>
        <i class="fa-solid fa-house"></i>
        <% end %>
      </li>
      <li class="nav-item active">
        <%= link_to  account_path, class: "nav-link fs-1" do %>
        <i class="fa-solid fa-user"></i>
        <% end %>
      </li>
      <li class="nav-item active">
        <%= link_to  tickets_path, class: "nav-link fs-1" do %>
        <i class="fa-brands fa-bitcoin"></i>
        <% end %>
      </li>
      <li class="nav-item active">
        <%= link_to  destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link fs-1" do %>
        <i class="fa-solid fa-right-from-bracket"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <a class="nav-link fs-1" href="#"><i class="fa-solid fa-gear"></i></a>
      </li>
    </ul>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto flex-column">
        <% if user_signed_in? %>

          <li class="nav-item">
            <%= link_to "Account", account_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "dropdown menu" %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
