<%= render 'shared/vertical_navbar'%>

<div class="container moved">
  <h1 class="my-4">Ticket Details</h1>

  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">Ticket ID</h5>
      <p class="card-text"><%= @ticket.id %></p>
    </div>
  </div>

  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">Subject</h5>
      <p class="card-text"><%= @ticket.subject %></p>
    </div>
  </div>

  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">Requester</h5>
      <p class="card-text"><%= @ticket.client_email %></p>
    </div>
  </div>

  <%= link_to "Back to Tickets", tickets_path, class: "btn btn-primary mt-3 mb-3" %>
  <%= link_to "Assign to me", assign_ticket_path(@ticket), data: {turbo_method: :patch}, class: "btn btn-primary text-light rounded shadow-sm" %>

  </div>
</div>

<style>
  .table-hover tbody tr:hover {
    background-color: #f5f5f5;
    cursor: pointer;
  }
</style>
